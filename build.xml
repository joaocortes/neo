<project default="build">
  <target name="build">
    <mkdir dir="classes"/>
    <javac srcdir="src" destdir="classes" debug="on"/>
    <jar destfile="synth.jar" basedir="classes">
      <manifest>
        <attribute name="Main-Class" value="synth.main.Main"/>
      </manifest>
    </jar>
  </target>
  <target name="clean">
    <delete dir="classes"/>
    <delete file="synth.jar"/>
  </target>
</project>
